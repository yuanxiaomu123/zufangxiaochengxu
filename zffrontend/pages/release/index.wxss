page {
    background: #f5f5f5;
}

.section-title {
    padding: 20rpx 40rpx;
    color: #646464;
    font-size: 36rpx;
}

.type-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    padding: 0 40rpx;
}

.type-item {
    display: flex;
    align-items: center;
    width: 294rpx;
    height: 160rpx;
    margin-bottom: 20rpx;
    padding-left: 30rpx;
    background: rgba(255,255,255,1);
    box-shadow: 0px 4rpx 10rpx 0px rgba(0,0,0,0.05);
    border-radius: 10rpx;
}

.type-item .title {
    margin-bottom: 10rpx;
    font-size: 34rpx;
    color: #323232;
}

.type-item .desc {
    font-size: 28rpx;
    color: #969696;
}

.type-item .right {
    margin-left: 30rpx;
}

