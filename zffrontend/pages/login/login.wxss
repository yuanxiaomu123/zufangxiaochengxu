/**index.wxss**/
@import "../../style/weui.wxss";

.container {
    height: 100%;
}
.logo {
    text-align: center;
}
.logo image {
    max-width: 100%;
    width: 400rpx;
    height: 98rpx;
    margin:0 auto;
    margin-top: 150rpx;
    margin-bottom: 30px;
}

.loginform {
    width: 400rpx;
    margin:0 auto;
}
.loginform input {
    border:none;
    outline: none;
    border-radius: 5px;
    background: #a2cbd0;
    width: 400rpx;
    height: 70rpx;
    margin-bottom: 35rpx;
    text-align: left;
    color:#fff;
    padding-left: 5px;
    box-sizing: border-box;
}
.loginform .input-placeholder {
    color:#fff;
}
.loginform .yanz {
    display: inline-block;
    width: 249rpx;
    vertical-align: middle;
}
.loginform span {
    display: inline-block;
    width: 150rpx;
    vertical-align: middle;
    height: 70rpx;
    line-height: 70rpx;
    margin-bottom: 35rpx;
    color:#a2cbd0;
    text-align: right;
}
.loginform .submit {
    width: 100rpx;
    height: 100rpx;
    background: url(http://localhost/boluo/template/default/images/go.png) no-repeat center;
    background-size: 100%;
    border: none;
    outline: none;
    margin-top: 10px;
    margin-bottom: 30px;
}
.loginform .submit:after {
    border: none;
}

.foots button {
    width: 300rpx;
    height: 60rpx;
    border: 1px solid #6fbebb;
    color:#6fbebb;
    line-height: 60rpx;
    font-size: 13px;
    background: none;
    outline: none;
    margin-bottom: 10px;
}
.backgrounds {
    width: 100%;
    height: 100%;
    position: absolute;
    background: url(http://localhost/boluo/template/default/images/backg.png) no-repeat center bottom;
    background-size: 100%;
}