Page {
  width: 100%;
  font-size: 12px;
}
.top {
    background: #fff;
    padding: 10px;
    border-top: 1px solid #cbcbcb;
    border-bottom: 12px solid #f0f2f5;
}
.top .title {
    line-height: 28px;
    font-size: 15px;
}
.top .title .txt {
    color: #686868;
}

.order-list {
    padding-top: 15px;
}
.order-list .list {
    position: relative;
    border-left: 2px solid #e3e5e9;
    margin-left: 20px;
    padding-left: 25px;
    overflow: visible;
}

.order-list .list .content {
    padding-top: 12px;
    border-bottom: 1px solid #e3e5e9;
    padding-right: 12px;
    color: #848689;
}

.order-list .on .content {
    padding-top: 4px;
}

.order-list .on .content .txt {
    color: #000;
}

.order-list .list .content .txt {
    line-height: 24px;
    font-size: 15px;
    padding: 5px 0;
}

.order-list .list .content .time {
    line-height: 38px;
    font-size: 18px;
}
.order-list .list .icons-on {
    width: 8px;
    height: 8px;
    position: absolute;
    left: -8px;
    top: 0;
    background: #f23030;
    border:3px solid #fbc0c0;
    border-radius: 7px;
}
.order-list .list .icons {
    width: 10px;
    height: 10px;
    position: absolute;
    left: -6px;
    top: 22px;
    background: #e3e5e9;
    border-radius: 5px;
}
.prompt-txt {
    text-align: center;
    font-size: 14px;
    line-height: 44px;
    color: #888;
}