Page {
  background: #fff;
  width: 100%;
  font-size: 12px;
}
.cart-bg {
    text-align: center;
    height: 110px;
    line-height: 110px;
    margin-top: 12px;
}
.cart-bg .iconfont {
    font-size: 60px;
    color: #999;
}
.cart-title {
    color: #999;
    text-align: center;
    font-size: 14px;
    line-height: 50px;
}
.title {
    line-height: 36px;
    background: #fff;
    text-align: center;
    font-size: 13px;
    color: #666;
    border-bottom: 1px solid #d6d6d6;
}
.comment-order {
    display: flex;
    flex-wrap: nowrap;
    align-items: center;
    padding: 7px 4px;
    border-bottom: 1px solid #eee;
}
.comment-order wx-image {
    width: 60px;
    height: 60px;
    margin-right: 10px;
    max-width: 60px;
}
.comment-stars .comment-text {
    font-size: 14px;
    color: #333;
    margin-bottom: 6px;
    display: block
}
.comment-stars .iconfont {
    color: #ff0000;
    font-size: 18px;
    margin-right: 5px;
}
.comment-stars .change {
    color: #c5c4c4;
}
.comment-list {
    padding: 10px;
    border-bottom: 1px solid #eee;
}
.comment-message {
    display: block;
    line-height: 24px;
    color: #888;
}
.comment-message-recove {
    display: block;
    width: 100%;
    line-height: 24px;
    color: #888;
}
.recovery-title {
    color: #f90;
}
.textarea {
    width: 100%;
    padding: 10px;
    margin: 10px 0;
    background-color: #eeecec;
}
.btn-area {
    padding: 10px 5%;
}
button[type="primary"] {
    background-color:#0066cc;
}