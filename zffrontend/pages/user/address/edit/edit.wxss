Page {
  width: 100%;
  font-size: 16px;
  height: 100%;
}
.address-title {
    line-height: 46px;
    padding-left: 15px;
}
.address-content {
    background: #fff;
}
.section {
    display: flex;
	flex-wrap: nowrap;
    align-items:center; 
    line-height: 44px;
    border-bottom: 1px solid #e5e5e5;
    padding: 0 10px;
    position: relative;
}

.section .icon-link {
    position: absolute;
    width: 16px;
    height: 16px;
    right: 10px;
    top: 2px;
    color: #e2e2e6;
    font-size: 16px;
}

.section .title {
    width: 80px;
}
.section input {
    width: 100%;
    height: 28px;
    line-height: 28px;
}

.section .mask {
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    z-index: 999;
}

.switch-txt {
    color: #999;
    padding-left: 6px;
}

button[type="primary"] {
    display: block;
    background-color:#0092d8;
    margin: 10px 10px;
    line-height: 40px;
    border-radius: 3px;
    font-size: 14px;
    text-align: center;
    color: #fff;
    margin-top: 40px;
}

.flex-box-bg {
    background: rgba(0,0,0,0.5);
    position: fixed;
    width: 100%;
    left: 0;
    top: 0;
    bottom: 0;
    z-index: 99;
}
.flex-city {
    position: fixed;
    z-index: 999;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 190px;
    border-top: 1px solid #ddd;
    background: #fff;
}

.flex-head {
    line-height: 40px;
    height: 40px;
    position: relative;
    padding: 0 60px 0 50px;
    text-align: right;
}

.flex-head .cancel,
.flex-head .determine {
    position: absolute;
    top: 8px;
    width: 40px;
    line-height: 24px;
    height: 24px;
    color: #666;
    background: #ddd;
    border-radius: 2px;
    text-align: center;
}

.flex-head .cancel {
    left: 10px;
}

.flex-head .determine {
    right: 10px;
    background: #0092d8;
    color: #fff;
}

.flex-center {
    display: flex;
}