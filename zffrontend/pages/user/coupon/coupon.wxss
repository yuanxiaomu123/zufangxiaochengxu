/* pages/user/coupon/coupon.wxss */
Page {
  background: #f4f2f2;
  width: 100%;
  font-size: 12px;
}
.cart-bg {
    text-align: center;
    height: 110px;
    line-height: 110px;
    margin-top: 12px;
}
.cart-bg .iconfont {
    font-size: 60px;
    color: #999;
}
.cart-title {
    color: #999;
    text-align: center;
    font-size: 14px;
    line-height: 50px;
}
.coupon-list {
    display: flex;
    flex-wrap: nowrap;
    align-items: center;
    padding: 10px;
    margin: 15px 5%;
    margin-bottom: 0;
    border-top: 4px solid #f90;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
    background: #fff;
    position: relative;
}
.coupon-left {
    width: 30%;
    color: #f90;
    font-size: 13px;
    padding-bottom: 3px;
}
.coupon-left .price-text {
    display: block;
}
.coupon-left .price {
    font-size: 20px;
    font-weight: bold;
}
.coupon-right {
    line-height: 22px;
    color: #888;
}
.coupon-right .text {
    display: block;
}
.coupon-receive {
    display: flex;
    flex-wrap: nowrap;
    align-items: center;
    padding: 20px 10px;
    margin: 15px 5%;
    margin-top: 0;
    border-bottom-left-radius: 4px;
    border-bottom-right-radius: 4px;
    background: #fff;
    position: relative;
    border-top: 1px dashed #ccc;
}
.coupon-receive .coupon-title {
    color: #666;
    font-size: 13px;
}
.coupon-receive .receive {
    position: absolute;
    right: 10px;
    top: 15px;
    display: inline-block;
    padding: 5px 10px;
    border-radius: 3px;
    background: #f90;
    color: #fff;
}
.coupon-receive .coupon {
    border-radius: 4px;
    position: absolute;
    right: 10px;
    top: 0;
    color: #999;
    font-size: 50px;
}
.back-fff {
    background: #fff;
    display: inline-block;
    height: 16px;
}
